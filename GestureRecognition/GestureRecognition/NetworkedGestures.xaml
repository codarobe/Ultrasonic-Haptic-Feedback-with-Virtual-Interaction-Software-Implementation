<Window x:Class="GestureRecognition.NetworkedGestures"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestureRecognition"
        mc:Ignorable="d"
        Title="NetworkedGestures" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="ipInput" HorizontalAlignment="Left" Height="23" Margin="305,126,0,0" TextWrapping="Wrap" Text="IP Address" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="portInput" HorizontalAlignment="Left" Height="23" Margin="305,154,0,0" TextWrapping="Wrap" Text="Port" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Margin="305,192,0,0" VerticalAlignment="Top" Width="75" Click="connectButton_Click"/>
        <Label x:Name="statusText" Content="Status: Not Connected" HorizontalAlignment="Left" Margin="290,230,0,0" VerticalAlignment="Top" Width="153"/>

    </Grid>
</Window>
